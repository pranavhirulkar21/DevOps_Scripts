{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "vnetName": {
        "type": "string",
        "metadata": {
          "description": "Name of the virtual network"
        }
      },
      "vnetAddressPrefix": {
        "type": "string",
        "defaultValue": "10.0.0.0/16",
        "metadata": {
          "description": "Address prefix for the virtual network"
        }
      },
      "frontendSubnetPrefix": {
        "type": "string",
        "defaultValue": "10.0.1.0/24",
        "metadata": {
          "description": "Address prefix for the frontend subnet"
        }
      },
      "backendSubnetPrefix": {
        "type": "string",
        "defaultValue": "10.0.2.0/24",
        "metadata": {
          "description": "Address prefix for the backend subnet"
        }
      },
      "dbSubnetPrefix": {
        "type": "string",
        "defaultValue": "10.0.3.0/24",
        "metadata": {
          "description": "Address prefix for the database subnet"
        }
      },
      "frontendVMSize": {
        "type": "string",
        "defaultValue": "Standard_B1ms",
        "metadata": {
          "description": "Size of the frontend virtual machine"
        }
      },
      "backendVMSize": {
        "type": "string",
        "defaultValue": "Standard_B1ms",
        "metadata": {
          "description": "Size of the backend virtual machine"
        }
      },
      "adminUsername": {
        "type": "string",
        "metadata": {
          "description": "Admin username for the virtual machines"
        }
      },
      "adminPassword": {
        "type": "securestring",
        "metadata": {
          "description": "Admin password for the virtual machines"
        }
      },
      "mySqlAdminPassword": {
        "type": "securestring",
        "metadata": {
          "description": "Admin password for the MySQL database"
        }
      }
    },
    "variables": {
      "frontendNSGName": "[concat(parameters('vnetName'), '-frontend-nsg')]",
      "backendNSGName": "[concat(parameters('vnetName'), '-backend-nsg')]",
      "dbNSGName": "[concat(parameters('vnetName'), '-db-nsg')]"
    },
    "resources": [
      {
        "type": "Microsoft.Network/virtualNetworks",
        "apiVersion": "2020-06-01",
        "name": "[parameters('vnetName')]",
        "location": "[resourceGroup().location]",
        "properties": {
          "addressSpace": {
            "addressPrefixes": [
              "[parameters('vnetAddressPrefix')]"
            ]
          },
          "subnets": [
            {
              "name": "frontendSubnet",
              "properties": {
                "addressPrefix": "[parameters('frontendSubnetPrefix')]",
                "networkSecurityGroup": {
                  "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('frontendNSGName'))]"
                }
              }
            },
            {
              "name": "backendSubnet",
              "properties": {
                "addressPrefix": "[parameters('backendSubnetPrefix')]",
                "networkSecurityGroup": {
                  "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('backendNSGName'))]"
                }
              }
            },
            {
              "name": "dbSubnet",
              "properties": {
                "addressPrefix": "[parameters('dbSubnetPrefix')]",
                "networkSecurityGroup": {
                  "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('dbNSGName'))]"
                }
              }
            }
          ]
        }
      },
      {
        "type": "Microsoft.Network/networkSecurityGroups",
        "apiVersion": "2020-06-01",
        "name": "[variables('frontendNSGName')]",
        "location": "[resourceGroup().location]",
        "properties": {
          "securityRules": [
            {
              "name": "AllowHTTP",
              "properties": {
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "80",
                "sourceAddressPrefix": "*",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 300,
                "direction": "Inbound"
              }
            },
            {
              "name": "AllowHTTPS",
              "properties": {
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "443",
                "sourceAddressPrefix": "*",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 310,
                "direction": "Inbound"
              }
            },
            {
              "name": "AllowSSH",
              "properties": {
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "22",
                "sourceAddressPrefix": "*",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 320,
                "direction": "Inbound"
              }
            }
          ]
        }
      },
      {
        "type": "Microsoft.Network/networkSecurityGroups",
        "apiVersion": "2020-06-01",
        "name": "[variables('backendNSGName')]",
        "location": "[resourceGroup().location]",
        "properties": {
          "securityRules": [
            {
              "name": "AllowSSH",
              "properties": {
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "22",
                "sourceAddressPrefix": "*",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 300,
                "direction": "Inbound"
              }
            }
          ]
        }
      },
      {
        "type": "Microsoft.Network/networkSecurityGroups",
        "apiVersion": "2020-06-01",
        "name": "[variables('dbNSGName')]",
        "location": "[resourceGroup().location]",
        "properties": {
          "securityRules": [
            {
              "name": "AllowMySQL",
              "properties": {
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "3306",
                "sourceAddressPrefix": "*",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 300,
                "direction": "Inbound"
              }
            }
          ]
        }
      },
      {
        "type": "Microsoft.Compute/virtualMachines",
        "apiVersion": "2021-07-01",
        "name": "frontendVM",
        "location": "[resourceGroup().location]",
        "properties": {
          "hardwareProfile": {
            "vmSize": "[parameters('frontendVMSize')]"
          },
          "osProfile": {
            "computerName": "frontendVM",
            "adminUsername": "[parameters('adminUsername')]",
            "adminPassword": "[parameters('adminPassword')]"
          },
          "networkProfile": {
            "networkInterfaces": [
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces', 'frontendNIC')]"
              }
            ]
          },
          "storageProfile": {
            "imageReference": {
              "publisher": "Canonical",
              "offer": "UbuntuServer",
              "sku": "22.04-LTS",
              "version": "latest"
            },
            "osDisk": {
              "createOption": "FromImage"
            }
          }
        }
      },
      {
        "type": "Microsoft.Compute/virtualMachines",
        "apiVersion": "2021-07-01",
        "name": "backendVM",
        "location": "[resourceGroup().location]",
        "properties": {
          "hardwareProfile": {
            "vmSize": "[parameters('backendVMSize')]"
          },
          "osProfile": {
            "computerName": "backendVM",
            "adminUsername": "[parameters('adminUsername')]",
            "adminPassword": "[parameters('adminPassword')]"
          },
          "networkProfile": {
            "networkInterfaces": [
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces', 'backendNIC')]"
              }
            ]
          },
          "storageProfile": {
            "imageReference": {
              "publisher": "Canonical",
              "offer": "UbuntuServer",
              "sku": "18.04-LTS",
              "version": "latest"
            },
            "osDisk": {
              "createOption": "FromImage"
            }
          }
        }
      },
      {
        "type": "Microsoft.Network/networkInterfaces",
        "apiVersion": "2020-06-01",
        "name": "frontendNIC",
        "location": "[resourceGroup().location]",
        "properties": {
          "ipConfigurations": [
            {
              "name": "ipConfig1",
              "properties": {
                "subnet": {
                  "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), 'frontendSubnet')]"
                },
                "privateIPAllocationMethod": "Dynamic",
                "publicIPAddress": {
                  "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'frontendPublicIP')]"
                }
              }
            }
          ]
        }
      },
      {
        "type": "Microsoft.Network/networkInterfaces",
        "apiVersion": "2020-06-01",
        "name": "backendNIC",
        "location": "[resourceGroup().location]",
        "properties": {
          "ipConfigurations": [
            {
              "name": "ipConfig1",
              "properties": {
                "subnet": {
                  "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), 'backendSubnet')]"
                },
                "privateIPAllocationMethod": "Dynamic"
              }
            }
          ]
        }
      },
      {
        "type": "Microsoft.Network/publicIPAddresses",
        "apiVersion": "2020-06-01",
        "name": "frontendPublicIP",
        "location": "[resourceGroup().location]",
        "properties": {
          "publicIPAllocationMethod": "Dynamic",
          "dnsSettings": {
            "domainNameLabel": "[concat('frontend', uniqueString(resourceGroup().id))]"
          }
        }
      },
      {
        "type": "Microsoft.DBforMySQL/servers",
        "apiVersion": "2017-12-01",
        "name": "mySqlServer",
        "location": "[resourceGroup().location]",
        "properties": {
          "administratorLogin": "[parameters('adminUsername')]",
          "administratorLoginPassword": "[parameters('mySqlAdminPassword')]",
          "version": "8.0",
          "storageProfile": {
            "storageMB": 51200
          },
          "sslEnforcement": "Enabled"
        },
        "sku": {
          "name": "GP_Gen5_2",
          "tier": "GeneralPurpose",
          "capacity": 2,
          "family": "Gen5"
        }
      },
      {
        "type": "Microsoft.DBforMySQL/servers/firewallRules",
        "apiVersion": "2017-12-01",
        "name": "AllowAllAzureIPs",
        "dependsOn": [
          "[resourceId('Microsoft.DBforMySQL/servers', 'mySqlServer')]"
        ],
        "properties": {
          "startIpAddress": "0.0.0.0",
          "endIpAddress": "0.0.0.0"
        }
      }
    ]
  }
  